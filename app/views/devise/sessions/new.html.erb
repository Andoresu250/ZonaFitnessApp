<div class="container-fluid ">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-1 col-sm-3 col-md-4 " ></div>  
      <div class="col-xs-10 col-sm-6 col-md-4 " >
        <center>
              <img src="/logoHD.png" height="350" width="350">             
        </center>
      </div>      
      <div class="col-xs-1 col-sm-3 col-md-4 "></div> 
    </div>  

    <!--FORM EMAIL-->
    <div class="form-group">      
      <div class="row">       
        <div class="col-xs-1 col-sm-3 col-md-4 " ></div>  
        <div class="col-xs-10 col-sm-6 col-md-4 " >
          <div class="input-group">
              <span class="input-group-addon be-transparent"><i class="fa fa-envelope-o be-white"></i></span>
              <%= f.email_field :email, autofocus: true, class:"form-control rounded-corners be-transparent be-white placeholder-white", placeholder:"email" %>        
            <!--<input class="form-control rounded-corners be-transparent be-white placeholder-white" type="text" placeholder="User">-->
          </div>          
        </div>  
        <div class="col-xs-1 col-sm-3 col-md-4 "></div> 
      </div>  
    </div>    
    
    <!--FORM PASSWORD-->
    <div class="form-group">
      <div class="row">       
        <div class="col-xs-1 col-sm-3 col-md-4 " ></div>  
        <div class="col-xs-10 col-sm-6 col-md-4 " >
          <div class="input-group">           
            <span class="input-group-addon be-transparent"><i class="fa fa-unlock-alt be-white"></i></span>
            <%= f.password_field :password, autocomplete: "off", class:"form-control rounded-corners be-transparent be-white placeholder-white", placeholder:"Pass" %>
            <!--<input class="form-control rounded-corners be-transparent be-white placeholder-white" type="password" placeholder="Pass">-->
          </div>
        </div>  
        <div class="col-xs-1 col-sm-3 col-md-4 "></div>     
      </div>
    </div>

    <!--BUTTON LOGIN-->
    <div class="form-group">
      <div class="row"> 
        <div class="col-xs-1 col-sm-3 col-md-4 " ></div>  
        <div class="col-xs-10 col-sm-6 col-md-4 " >                    
          <%= f.submit "Log in", class:"btn btn-custom rounded-corners form-control " %>
          <!--<button type="submit" class="btn btn-custom rounded-corners form-control ">Login</button>-->
        </div>  
        <div class="col-xs-1 col-sm-3 col-md-4 "></div>         
      </div>
    </div> 

     <div class="form-group">
      <div class="row"> 
        <div class="col-xs-1 col-sm-3 col-md-4 " ></div>  
        <div class="col-xs-10 col-sm-6 col-md-4 " >                    
          <%= render "devise/shared/links" %> 
        </div>  
        <div class="col-xs-1 col-sm-3 col-md-4 "></div>         
      </div>
    </div> 
  <% end %>
  
</div>
